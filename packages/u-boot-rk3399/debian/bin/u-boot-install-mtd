#!/bin/bash

set -eE

disk="/dev/mtd0"
if [ ! -c "${disk}" ]; then
    echo "$(basename "$0"): block device '${disk}' not found, skipping this script"
    exit 0  # 退出脚本，但不返回错误码
fi

echo "$(basename "$0"): writing U-Boot to the SPI flash"

# 检查u-boot-rockchip-spi.bin文件是否存在
uboot_spi_image="/usr/lib/u-boot/u-boot-rockchip-spi.bin"
if [ ! -f "${uboot_spi_image}" ]; then
    uboot_spi_image="/usr/lib/u-boot/rkspi_loader.img"
    if [ ! -f "${uboot_spi_image}" ]; then
        echo "$(basename "$0"): U-Boot image not found, skipping this script"
        exit 0  # 退出脚本，但不返回错误码
    fi
fi

echo "$(basename "$0"): Using U-Boot image '${uboot_spi_image}'"

extra_opts_flashcp=("--verbose")
if flashcp -h | grep -q -e '--partition'; then
    extra_opts_flashcp+=("--partition")
fi

if ! sudo flashcp "${extra_opts_flashcp[@]}" "${uboot_spi_image}" "${disk}"; then
    echo "$(basename "$0"): Failed to write U-Boot to SPI flash"
    exit 1
fi

sudo sync
